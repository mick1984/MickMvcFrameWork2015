@model IList<MisBase.Users.Roles>
@{
    ViewBag.Title = "RoleList";
    Layout = null;
}

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta charset="utf-8" />

@Scripts.Render("~/bundles/modernizr")

@Scripts.Render("~/EasyUI/js")

@Styles.Render("~/EasyUI/css")

<h2>RoleList</h2>

<table>
   <tr>
       <th>角色名</th>
       <th>角色Level</th>
       <th>角色描述</th>
    </tr>
    @using (Html.BeginForm())
    {
    
        for (int i = 0; i < Model.Count; i++)
        {
        <tr>
            <td>@Html.DisplayFor(m => m[i].RoleName)</td>
            <td>@Html.DisplayFor(m => m[i].RoleLevel)</td>
            <td>@Html.DisplayFor(m => m[i].RoleDesc)</td>
            <td>@Html.ActionLink("修改", "UpdateRole", new { updateType = 2, id = Model[i].RoleID }, new { target="_blank" })</td>
            <td>@Html.ActionLink("删除", "UpdateRole", new { updateType = 3, id = Model[i].RoleID }, new { target="_blank" })</td>
        </tr>
        }
    }
    <tr><td><input type="button" value="上一页"/> <input type="button" value="下一页" /> </td></tr>
</table>

