                var dldata = $('#dl').datalist('getChecked');

                //alert(JSON.stringify(dldata));

                var cbvalue = $('#cb').combobox('getValue');
                if (cbvalue == '')
                {
                    alert('请选择一个角色');
                    return "请选择一个角色";
                }
                
                d["data.RoleID"] = $('#cb').combobox('getValue');

                //alert(('#cb').combobox('getValues'));

